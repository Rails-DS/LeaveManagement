<div class="container">
<% if @leavehist.count == 0 %>
		<h2>No Leave Requests</h2>
	<% else %>
		<table class="table table-borderless mt-5">
		  <tr class="table-primary">
		    <th>Name</th>
		    <th>Leave Type</th>
		    <th>Leave Reason</th>
		    <th>Applied on</th>
		    <th>No of Days</th>
		    <th  colspan="3">Actions</th>
		  </tr>
		<% @leavehist.each do |hist| %>
		  <tr>
		    <td><%= hist.user.name %></td>
		    <td><%= hist.leaveType %></td>
		    <td><%= hist.leaveReason %></td>
		    <td><%= hist.created_at.strftime("%d-%m-%Y") %></td>
		    <td><%= hist.noofDays %></td>
		    <td><%= link_to "Approve" , toggle_status_user_path(hist.id),{class:"btn btn-success"} %>
		    <%= link_to "Reject", status_rejected_user_path(hist.id) ,{class:"btn btn-danger"} %></td>
		    
		  </tr>

		<%end%>
<%end%>
 </div>

 <%= link_to 'back', users_path, {class:"btn btn-primary"} %>